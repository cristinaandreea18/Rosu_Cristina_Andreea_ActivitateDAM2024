<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/idMainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Adauga Student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnListaStudenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Lista Studenti"
        app:layout_constraintStart_toStartOf="@+id/idMainBtn"
        app:layout_constraintTop_toBottomOf="@+id/idMainBtn" />

    <Button
        android:id="@+id/idBtnActivity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Activitate 2"
        app:layout_constraintStart_toStartOf="@+id/idBtnListaStudenti"
        app:layout_constraintTop_toBottomOf="@+id/idBtnListaStudenti" />
</androidx.constraintlayout.widget.ConstraintLayout>